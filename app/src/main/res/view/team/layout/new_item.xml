<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/new_item2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ni_ib1"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/fan_hui2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:textSize="36dp"
            android:text="新建项目" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/new_item1"/>


    <EditText
        android:id="@+id/ni_et1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="5dp"
        android:background="@drawable/td_et_background"
        android:selectAllOnFocus="true"
        android:maxLines="1"
        android:hint="项目名称" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/td_et_background"
        android:text="成员"
        android:paddingLeft="5dp"
        android:gravity="left"
        android:textSize="25dp"/>

    //buzhou

    <EditText
        android:id="@+id/ni_et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="50dp"
        android:selectAllOnFocus="true"
        android:paddingLeft="5dp"
        android:background="@drawable/td_et_background"
        android:hint="项目介绍(100字以内)"
        android:gravity="top"
        android:minLines="6"
        android:maxLength="100" />

    <ImageButton
        android:id="@+id/ni_ib2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/new_item3" />


</LinearLayout>