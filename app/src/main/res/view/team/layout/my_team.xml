<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/my_team1"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/mt_ib1"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:src="@drawable/create_team4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="36dp"
            android:textSize="48dp"
            android:text="我的团队" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="Members"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mt_fragmentContainerView1"
        android:name="com.example.team.teamwork.MyTeam.Horizontal.MyTeamFragmentHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="28dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="128dp"
            android:text="项目"
            android:textSize="48dp"/>

        <ImageButton
            android:id="@+id/mt_ib2"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="66dp"
            android:src="@drawable/my_team2"/>
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mt_fragmentContainerView2"
        android:name="com.example.team.teamwork.MyTeam.Vertical.MyTeamFragmentVertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>