<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/task_page">
    
    <TextView
        android:id="@+id/task_page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任务名称"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/task_page2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="团队"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/task_page1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/task_page3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/task_page1"
        app:layout_constraintStart_toEndOf="@id/task_page2"/>
    <TextView
        android:id="@+id/task_page4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截止到"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/task_page2"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/task_page5"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@mipmap/task_page1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>