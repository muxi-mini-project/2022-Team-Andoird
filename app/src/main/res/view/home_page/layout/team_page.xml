<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/home_team"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <EditText
        android:id="@+id/team_page1"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="团队名称"
        android:background="@null"
        android:cursorVisible="false"
        android:focusable="false"
        android:singleLine="true"
        android:textColor="#394043"
        android:textColorHint="#999d9e"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_page2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintTop_toBottomOf="@id/team_page1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/team_page1" />

    <ImageView
        android:id="@+id/team_page3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@mipmap/yuan1"
        app:layout_constraintTop_toBottomOf="@id/team_page2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/team_page4"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@mipmap/yuan1"
        app:layout_constraintTop_toBottomOf="@id/team_page2"
        app:layout_constraintStart_toEndOf="@id/team_page3"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/team_page5"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/yuan2"
        app:layout_constraintTop_toBottomOf="@id/team_page2"
        app:layout_constraintStart_toEndOf="@id/team_page4"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>