<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_pop_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/popupwindow1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/add_team"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popupwindow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="创建团队"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/popupwindow1"
        app:layout_constraintStart_toEndOf="@id/popupwindow1"
        app:layout_constraintTop_toTopOf="@id/popupwindow1"
        android:focusable="true" />

    <ImageView
        android:id="@+id/popupwindow3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:src="@mipmap/creat_team"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popupwindow1" />

    <TextView
        android:id="@+id/popupwindow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="加入团队"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/popupwindow3"
        app:layout_constraintStart_toEndOf="@id/popupwindow3"
        app:layout_constraintTop_toTopOf="@id/popupwindow3"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>