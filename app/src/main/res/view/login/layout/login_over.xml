<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/zhu_ce_over_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        app:srcCompat="@mipmap/login_ok"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/zhu_ce_over_2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        app:srcCompat="@mipmap/team_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/zhu_ce_over_3"
        android:layout_width="250dp"
        android:layout_height="330dp"
        android:background="@drawable/layout_background2"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/zhu_ce_over_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zhu_ce_over_1" >

        <TextView
            android:id="@+id/zhu_ce_over_4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="完善您的个人信息"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@id/zhu_ce_over_3"
            app:layout_constraintStart_toStartOf="@id/zhu_ce_over_3"
            app:layout_constraintEnd_toEndOf="@id/zhu_ce_over_3"/>

        <!--圆形图片-->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/zhu_ce_over_5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="changeAvatar"
            app:shapeAppearanceOverlay="@style/circleImageStyle"
            android:layout_marginTop="8dp"
            android:layout_marginStart="0dp"
            app:srcCompat="@mipmap/tou_xiang"
            app:layout_constraintTop_toBottomOf="@id/zhu_ce_over_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/zhu_ce_over_6"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="点击设置头像"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/zhu_ce_over_5"
            app:layout_constraintStart_toStartOf="@id/zhu_ce_over_3"
            app:layout_constraintEnd_toEndOf="@id/zhu_ce_over_3"/>

        <EditText
            android:id="@+id/zhu_ce_over_7"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="请输入你的昵称"
            android:textSize="13sp"
            android:background="@drawable/edit_background2"
            android:layout_marginTop="16dp"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toBottomOf="@+id/zhu_ce_over_6"
            app:layout_constraintStart_toStartOf="@+id/zhu_ce_over_3"
            app:layout_constraintEnd_toEndOf="@id/zhu_ce_over_3"/>

        <Button
            android:id="@+id/zhu_ce_over_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成设置"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_shape"
            app:layout_constraintTop_toBottomOf="@id/zhu_ce_over_7"
            app:layout_constraintEnd_toEndOf="@id/zhu_ce_over_3"
            app:layout_constraintStart_toStartOf="@id/zhu_ce_over_3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>