<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:gravity="center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/create_team1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="创建你的新团队"
        android:textSize="30dp" />

    <!--圆形图片-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/create_team2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        app:shapeAppearanceOverlay="@style/circleImageStyle"
        app:srcCompat="@mipmap/tou_xiang" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击设置头像"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/create_team3"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit2"
        android:hint="设置你的团队昵称"
        android:padding="10dp" />

    <EditText
        android:id="@+id/create_team4"
        android:layout_width="300dp"
        android:layout_height="166dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edit2"
        android:gravity="left"
        android:hint="填写你的团队码（加入团队的标识码）"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/create_team5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/create_team1" />

        <ImageButton
            android:id="@+id/create_team6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/create_team2" />
    </LinearLayout>

</LinearLayout>